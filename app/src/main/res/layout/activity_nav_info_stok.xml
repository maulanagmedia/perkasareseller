<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeInfoStok.ActInfoStok"
    android:background="@drawable/ic_baground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_big"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_stok_mkios"
                android:background="?attr/selectableItemBackground"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:padding="@dimen/margin_default"
                    android:src="@drawable/ic_stok_mkios"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:textColor="@color/color_white"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="Stok Mkios"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_stok_tcash"
                android:background="?attr/selectableItemBackground"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:padding="@dimen/margin_default"
                    android:src="@drawable/ic_stok_tcash"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:textColor="@color/color_white"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="Stok TCash"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginTop="@dimen/margin_default"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_stok_bulk"
                android:background="?attr/selectableItemBackground"
                android:visibility="gone"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:padding="@dimen/margin_default"
                    android:src="@drawable/ic_stok_bulk"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:textColor="@color/color_white"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="Stok Bulk"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ll_stok_pbob"
                android:background="?attr/selectableItemBackground"
                android:weightSum="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.7"
                    android:padding="@dimen/margin_default"
                    android:src="@drawable/ic_stok_pbob"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.3"
                    android:textColor="@color/color_white"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:text="Stok PPOB"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>